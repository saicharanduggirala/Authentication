                <% if (locals.flash.success && flash.success.length > 0) {%>
                            new Noty({
                                theme: 'relax',

                                text: '<%= flash.success %>',
                                type: 'success',
                                layout: 'topRight',
                                timeout: 1900,

                            }).show();
                <%} %>
            
