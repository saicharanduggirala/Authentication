<body>

    <% if (messages.error) { %>
        <p class="error">
            <%= messages.error %>
        </p>
        <% } %>
            <% if (messages.success) { %>
                <p class="success">
                    <%= messages.success %>
                </p>
                <% } %>


                    <div id="nav-bar">
                        <div id="logo">
                            <img src="../assets/images/image2.jpeg" alt="logo">
                        </div>
                        <div id="profile-btns">
                            <div id="signOut-btn">
                                <button><a href="/sign-out">Sign Out</a></button>
                            </div>
                            <div class="resetPass-btn">
                                <button><a href="/reset">Reset Password</a></button>
                            </div>
                        </div>
                    </div>
                    <div id="text">
                        <h1>Welcome to Awesomenesss!!!!!</h1>

                    </div>

                    <script>
        <% if (locals.flash.success && flash.success.length > 0) {%>
                            new Noty({
                                theme: 'relax',

                                text: '<%= flash.success %>',
                                type: 'success',
                                layout: 'topRight',
                                timeout: 1900,

                            }).show();
        <%} %>
    
        <% if (locals.flash.error && flash.error.length > 0) {%>
                            new Noty({
                                theme: 'relax',

                                text: '<%= flash.error %>',
                                type: 'error',
                                layout: 'topRight',
                                timeout: 1900,

                            }).show();
