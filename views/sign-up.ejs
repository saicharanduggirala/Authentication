    <div id="main-container">
        <div id="text">
            <h1>Sign Up Here!!!</h1>
        </div>
        <div id="signup-form">
            <form action="/sign-up/create" method="post" id="sign_up_form">
                <div class="inputbox">
                    <input type="text" name="name" placeholder="Enter Your Name" id="name"> <br>
                </div>

                <div class="inputbox">
                    <input type="email" name="email" placeholder="Enter Your Email" id="email"><br>
                </div>
                <div class="inputbox">
                    <input type="password" name="password" placeholder="Enter Your Password" id="password"><br>
                </div>
                <div class="inputbox">
                    <input type="password" name="confirm_password" placeholder="Confirm Your Password"
                        id="confirm_password"><br>
                </div>
                <button type="submit" value="Submit">Submit</button><br>
            </form>
        </div>
        <div id="google-link">
            <p>
                <button><a href="/auth/google">Google Sign In/Sign Up</a></button>
            </p>
        </div>
    </div>
    </div>

